<div class="row justify-content-center">
  <div class="col-xl-10 col-lg-12 col-md-9">
    <div class="card o-hidden border-0 shadow-lg my-5">
      <div class="card-body p-0">
        <div class="row">
          <div class="col-lg-6 d-none d-lg-block bg-password-image"></div>
          <div class="col-lg-6">
            <div class="p-5">
              <div class="text-center">
                <% if(locals.validation_error != undefined ||
                locals.success_message != undefined ||
                locals.login.error!=undefined){%> <%-
                include('./partials/_message.ejs' ) %> <% } %>
                <h1 class="h4 text-gray-900 mb-2">Yeni Şifrenizi Giriniz</h1>
                <p class="mb-4">
                 Lütfen yeni şifrenizi oluştunuz.
                </p>
              </div>
              <form class="user" action="/reset-password" method="post">
                
                <input type="hidden" name="id" value="<%= typeof id !='undefined'? id :'' %>">
                <input type="hidden" name="token" value="<%= typeof token !='undefined'? token :'' %>">
                
                <div class="form-group">
                  <input
                    type="password"
                    value="<%= typeof sifre !='undefined'? sifre :'' %>"
                    name="sifre"
                    class="form-control form-control-user"
                    id="exampleInputEmail"
                    aria-describedby="emailHelp"
                    placeholder="Şifrenizi giriniz"
                  />
                </div>
                <div class="form-group">
                  <input
                    type="password"
                    value="<%= typeof sifre2 !='undefined'? sifre2 :'' %>"
                    name="sifre2"
                    class="form-control form-control-user"
                    id="exampleInputEmail"
                    aria-describedby="emailHelp"
                    placeholder="Şifrenizi tekrar giriniz"
                  />
                </div>
                <button
                  type="submit"
                  class="btn btn-primary btn-user btn-block"
                >
                  Şifrenizi Güncelleyin
                </button>
              </form>
              <hr />
              <div class="text-center">
                <a class="small" href="/register"
                  >Kullanıcı Oluştur(Create an Account!)</a
                >
              </div>
              <div class="text-center">
                <a class="small" href="/login"
                  >Zaten Hesabınız Varmı -> Giriş Yap (Already have an account?
                  Login!)</a
                >
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

